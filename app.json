{
  "expo": {
    "name": "PITIA",
    "slug": "PITIA",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/PITIA_logo.png",
    "scheme": "pitia",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.PITIA"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "5438DC"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.PITIA"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/PITIA_logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#5438DC"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
